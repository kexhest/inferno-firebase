{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "inferno"
  ],
  "extends": [
    "airbnb-base",
    "plugin:inferno/recommended"
  ],
  rules: {
    "arrow-parens": [2, "as-needed"],
    "max-len": [2, {
      tabWidth: 2,
      code: 100,
      ignoreComments: false,
      ignorePattern: "^\\s*test",
      ignoreStrings: true,
      ignoreTemplateLiterals: true,
      ignoreTrailingComments: true,
      ignoreUrls: true
    }],
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "never"
    }],
    "no-param-reassign": [2, { props: false }],
    "semi": [2, "never"],
    "inferno/jsx-filename-extension": [1, { extensions: [".js"] }],
    "inferno/forbid-prop-types": [1, { forbid: ["any"] }]
  }
}
